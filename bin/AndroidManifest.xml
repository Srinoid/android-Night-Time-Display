<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vijayganduri.nighttimedisplay"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hdtimedisplay"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.vijayganduri.nighttimedisplay.DisplayActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.vijayganduri.nighttimedisplay.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/PreferenceTheme">
        </activity>
        
        <activity
            android:name="com.vijayganduri.nighttimedisplay.AboutActivity_"
            android:theme="@style/AboutTheme">
        </activity>        
        
    </application>

</manifest>