<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Preference Screen theme. -->
    <style name="PreferenceTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    </style>   
    
    <!-- About Screen theme. -->
    <style name="AboutTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowNoTitle">true</item>
    </style>       
    
    <!-- Green theme. -->
    <style name="GreenLedTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="fontColorBackground">@color/led_green</item>
		<item name="fontColor">@color/led_green</item>       
    </style>
    
    <!-- Red theme. -->
    <style name="RedLedTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="fontColorBackground">@color/led_red</item>
		<item name="fontColor">@color/led_red</item>   
    </style>
    
    <!-- Blue theme. -->
    <style name="BlueLedTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="fontColorBackground">@color/led_blue</item>
		<item name="fontColor">@color/led_blue</item>   
    </style>
    
    <!-- Soft Blue theme. -->
    <style name="SoftBlueLedTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="fontColorBackground">@color/led_soft_blue</item>
		<item name="fontColor">@color/led_soft_blue</item>   
    </style>    

</resources>